<h1>Best Pokedex Evarrr</h1>

  <div>
    <label>Search for Pokemon by name</label>
    <input id="searchForPokemon" type="text">
    <input id="searchPokemon" type="submit">
  </div>


<button id="showPokemon">Display Pokemon</button>
<button id="addPokemon">Add Pokemon</button>

<div id="results">
  <table id="pokemons">
    <thead>
      <tr>
        <th>Name</th>
        <th>Element</th>
        <th>Level</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<div id="pokemonForm">
  <fieldset>
    <legend>Add a New Pokemon</legend>
    <form id="newPokemon">
      <input type="text" id="name" placeholder="Pokemon Name"><br>
      <input type="text" id="element" placeholder="Pokemon Element"><br>
      <input type="number" id="level" placeholder="Pokemon Level"><br>
      <br>
      <input type="submit" value="Add Pokemon">
    </form>
  </fieldset>
</div>